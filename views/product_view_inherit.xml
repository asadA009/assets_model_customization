<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="product_view_tree_inherit" model="ir.ui.view">
            <field name="name">product.view.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_product_tree_view"/>
            <field name="arch" type="xml">
                <field name="standard_price" position="attributes">
                    <attribute name="groups">assets_model_customization.inventory_cost_user</attribute>
                </field>
            </field>
        </record>

        <record id="product_view_normal_form_inherit" model="ir.ui.view">
            <field name="name">product.view.normal.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="groups">assets_model_customization.inventory_cost_user</attribute>
                </xpath>
            </field>
        </record>

        <record id="product_variant_easy_form_inherit" model="ir.ui.view">
            <field name="name">product.view.easy.form.inherit</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_variant_easy_edit_view"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='standard_price']" position="attributes">
                    <attribute name="groups">assets_model_customization.inventory_cost_user</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>