<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>

        <record id="res_config_setting_form_inherit" model="ir.ui.view">
            <field name="name">res.config.setting.form.view</field>
            <field name="model">res.config.settings</field>
            <field name="inherit_id" ref="sale.res_config_settings_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='module_sale_margin']" position="attributes">
                    <attribute name="groups">assets_model_customization.inventory_cost_user</attribute>
                </xpath>
                <xpath expr="//label[@for='module_sale_margin']" position="attributes">
                    <attribute name="groups">assets_model_customization.inventory_cost_user</attribute>
                </xpath>
            </field>
        </record>
    </data>
</odoo>